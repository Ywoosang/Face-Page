{
    "compilerOptions": {
      "strict": false,
      "lib": ["ES2015","ES2016","ES2017","ES2018","ES2019","ES2020"],
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "moduleResolution": "node",   
      "sourceMap": true,
      "strictNullChecks" : false,
      // decorators
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "src/**/*.ts",
      "tests/**/*.test.ts"
    ],
    "exclude": [
      "node_modules",
    ]
}

  